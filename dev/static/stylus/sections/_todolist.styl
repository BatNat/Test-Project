.todolist 
  height 100%
  min-height 360px
  padding-top 67px
  
#list
  list-style-type decimal
  padding 0
  padding-left 26px
  margin 0

form 
  display inline-block
  padding-bottom 100px
h2
  text-transform uppercase
  font-size 24px
  padding-bottom 40px
  
.button
  display inline-block
  margin-left 5px
  
.item 
  color black
  font-size 24px
  font-weight bold
  padding 18px 0
  margin 0
  
.scratch
  text-decoration line-through
  opacity .5
.fa 
  margin-right 10px
  margin-left 10px
  font-size 20px
  
input[name="ListItem"]
  border-radius 5px
  width 534px
  height 38px
  border 1px solid #535353
  box-shadow inset 0 0 3px 3px #ddd  
  
input[name="ListItem"]:focus
  outline none !important
  outline-width none !important
  outline-color none !important