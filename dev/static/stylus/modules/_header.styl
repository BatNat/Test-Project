.accordion-title
	font-family 'PT Sans'
	padding 7px 15px
	margin-bottom 30px
	border-radius 3px
	border-style solid
	border-width 1px
	border-color  #cdcdcd
	box-sizing border-box
	background-color  #ffffff
	box-shadow 0px 2px 5px 0px rgba(0, 0, 0, 0.35)
	width: 618px
	height 40px
	cursor pointer

.accordion-body 
	margin 0
	padding 10px 15px 20px 0
  
.form-check-label
	padding-left 0


.form-check 
  	margin-bottom 10px



.form-check-label 
	cursor pointer

#checkbox1,
#checkbox2,
#checkbox3
	display none
    position relative
    
#checkbox1:checked + .box::after,
#checkbox2:checked + .box::after,
#checkbox3:checked + .box::after
	content ''
	width 18px
	height 18px
	position absolute
	top 2px
	left 2px
	background-color black

.box 
	position relative
	display block
	float left
	margin-right 10px
	background-color #fff
	border 2px solid 
	width 26px
	height 26px
	
.totalSum 
	height 100px
